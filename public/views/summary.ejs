<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SwiftWheels - Booking Invoice</title>
    <link rel="stylesheet" href="booking.css">
    <style>
        /* Basic Styling for the Invoice */
        .invoice {
            font-family: Arial, sans-serif;
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 8px;
            width: 60%;
            /* Adjust as needed */
            margin: 20px auto;
        }

        h1,
        h2 {
            text-align: center;
            margin-bottom: 10px;
            color: #333;
        }

        .invoice p {
            margin-bottom: 5px;
            font-size: 14px;
        }

        .invoice hr {
            border-top: 1px solid #ddd;
            margin: 15px 0;
        }

        .invoice button {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #4caf50;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .invoice button:hover {
            background-color: #45a049;
        }

        .driver-details {
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>SwiftWheels - Rental Invoice</h1>
        <p>Owners: Dhruvin Patel, Suyash Sunam, Harshvardhan Salunke, Sidharth Vijayan</p>
        <hr>
        <h2>Customer Details</h2>
        <p>Name: <%= customerName %>
        </p>
        <p>Email: <%= customerEmail %>
        </p>
        <hr>
        <h2>Booking Summary</h2>
        <p>Car: <%= carName %>
        </p>
        <p>Days: <%= days %>
        </p>
        <p>Driver: <%= driver %>
        </p>
        <p>Price per Day: ₹<%= pricePerDay.toFixed(2) %>
        </p>
        <p>Total Cost: ₹<%= totalCost.toFixed(2) %>
        </p>
        <p>Driver Charge: ₹<%= driverCost.toFixed(2) %>
        </p>
        <p>GST (18%): ₹<%= gst.toFixed(2) %>
        </p>
        <h3>Grand Total: ₹<%= total_price.toFixed(2) %>
        </h3>
        <button onclick="downloadInvoice()">Download Invoice as PDF</button>
        <script>
            function downloadInvoice() {
                const { jspdf } = window.jspdf;
                const doc = new jspdf();
                doc.setFontSize(18);
                doc.text("SwiftWheels - Rental Invoice", 20, 20, { align: 'center' });
                doc.setFontSize(12);
                doc.text("Owners: Dhruvin Patel, Suyash Sunam, Harshvardhan Salunke, Sidharth Vijayan", 20, 30, { align: 'center' });
                doc.setFontSize(14);
                doc.text("Customer Details", 20, 50);
                doc.setFontSize(12);
                doc.text("Name: " + "<%= customerName %>", 20, 60);
                doc.text("Email: " + "<%= customerEmail %>", 20, 70);
                doc.setFontSize(14);
                doc.text("Booking Summary", 20, 90);
                doc.setFontSize(12);
                doc.text("Car: " + "<%= carName %>", 20, 100);
                doc.text("Days: " + "<%= days %>", 20, 110);
                doc.text("Driver: " + "<%= driver %>", 20, 120);
                doc.text("Price per Day: ₹" + "<%= pricePerDay.toFixed(2) %>", 20, 130);
                doc.text("Total Cost: ₹" + "<%= totalCost.toFixed(2) %>", 20, 140);
                doc.text("Driver Charge: ₹" + "<%= driverCost.toFixed(2) %>", 20, 150);
                doc.text("GST (18%): ₹" + "<%= gst.toFixed(2) %>", 20, 160);
                doc.text("Grand Total: ₹" + "<%= total_price.toFixed(2) %>", 20, 180);
                doc.save("invoice.pdf");
            }
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
        <script
            src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.6/jspdf.plugin.autotable.min.js"></script>
    </div>
</body>

</html>